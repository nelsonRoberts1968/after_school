<html lang="en">

    <main>
      <div class="card form-container">
        <form class="form-container" action="/auth/signup" method="POST">
          <div class="form-group">
            <div class="row">
              <div class="col">
                <label for="fistname" class="form-text">First Name:</label>
                <input type="name" class="form-control" id="first-name" name="firstname" />
              </div>
